<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.start.lonewolf.chatapp.Eye_Ask_frag">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/eyeAskFragLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtAskQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="198dp"
            android:padding="20dp"
            android:text="ASK A QUESTION"
            android:textColor="@android:color/holo_purple"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtstartChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAskQuestion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:padding="20dp"
            android:text="CHAT WITH EYE HQ"
            android:textColor="?android:attr/colorFocusedHighlight"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMainName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:text="WELCOME TO EYE CENTER"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtMainLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtMainName"
            android:layout_alignBottom="@+id/txtMainName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="LOGIN" />
    </RelativeLayout>

</FrameLayout>
