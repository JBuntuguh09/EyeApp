<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.start.lonewolf.chatapp.UserProfile">

    <ImageView
        android:id="@+id/img_Profile"
        android:layout_width="382dp"
        android:layout_height="271dp"
        app:srcCompat="@drawable/default_avatar"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="3dp" />

    <RelativeLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_Profile"
        android:background="@android:color/holo_green_dark">

        <TextView
            android:id="@+id/txtP_DP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_Profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:text="DISPLAY NAME"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtP_US"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtP_DP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="Current User Status"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_fiends_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnSendRequest"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:text="Total Friends"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed" />

        <Button
            android:id="@+id/btnSendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:background="@color/btnBlue"
            android:text="Send Request" />

    </RelativeLayout>




</RelativeLayout>
